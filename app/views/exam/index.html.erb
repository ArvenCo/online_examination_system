<%= render "partial/navbar" %>
<div class="container mt-3">
    <p class="fs-2">Exams</p>
    <% if @current_user.role == "instructor" %>
    <div class="d-flex justify-content-end">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new-examModal">
            New Exam
        </button>
    </div>  
    <div class="d-flex justify-content-center">
        <div class="card w-75">
            <div class="card-body px-2">
                
                <%= render "partial/search", url_path: root_path%>
                <ul class="list-group list-group-flush">
                    <% @exams.each do |exam| %>
                        <% if exam.user_id == session[:user_id] %>
                        <li class="list-group-item">
                            <div class="row"> 
                                <div class="col-4">
                                    <p class="m-0">
                                        <%= exam.name %>
                                    </p>
                                </div>
                                <div class="col-6 d-flex justify-content-center align-items-center">
                                    <p class="m-0">
                                        Taken by: <%= ExamSession.where(exam_id: exam.id).length %> student(s)
                                    </p>
                                    <%= link_to "View", index_exam_session_path(exam), class: "mx-2 text-decoration-none"  %>
                                </div>
                                
                                <div class="col-1">
                                    <%= link_to "Edit", edit_exam_path(exam), class: "mx-2 text-decoration-none"%>
                                </div>
                            </div>
                        </li>
                        <% end %>
                    <% end %>

                </ul>
            </div>
        </div>
    </div>
    <% else %>
    <div class="d-flex justify-content-center">
        <div class="card w-75">
            <div class="card-body px-2">
                <%= render "partial/search", url_path: root_path%>
                <ul class="list-group list-group-flush">
                    <% curremt_time = DateTime.current.utc 
                    %>
                    
                    <% @exams.each do |exam| %>
                        
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between"> 
                                <div class="px-3">
                                    <p class="m-0">
                                        <%= exam.name %> 
                                    </p>
                                    <p class="fw-light ms-4 m-0">
                                        by
                                        <%= exam.user.name %>
                                    </p>
                                </div>
                                <div class="h-100 d-flex align-items-center">
                                    <% exs = ExamSession.find_by(user_id: @current_user.id, exam_id: exam.id) 
                                    time_exceed = false
                                    if exs.present? 
                                            time_exceed = exam.timer.minutes < ((curremt_time) - (exs.created_at + exam.timer.minutes)) 
                                    end %>
                                    
                                    <% if exs.present? &&  answer=Answer.find_by(exam_session_id: exs.id).present? || time_exceed %>
                                    
                                    
                                    <span class="mx-3">score: <%= exs.score %> / <%= Item.where(exam_id: exam.id).length %></span class="mx-3">
                                    <%= link_to "Review", show_exam_session_path(exs), class: "text-decoration-none"%>
                                    <% else %>
                                        <%= link_to "Answer Exam", new_answer_path(exam.id), class: "btn"%>
                                    <% end %>
                                </div>
                            </div>
                        </li>
                    <% end %>

                </ul>
            </div>
        </div>
    </div>
    <% end %>

</div>
<%= render "partial/flash" %>

<!-- Modal -->
<div class="modal fade" id="new-examModal" tabindex="-1" aria-labelledby="new-examModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="new-examModalLabel">New Exam</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with model: @exam, url: create_exam_path, method: :post do |f|%>
        <div class="modal-body">
            <%= render "partial/flash"%>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.hidden_field :user_id, :value => @current_user.id %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
        <% end %>
        
        
    </div>
    </div>
</div>