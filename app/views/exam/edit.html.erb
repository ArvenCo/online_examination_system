<%= render "partial/navbar" %>

<div class="container mt-5">
    <div class="card mb-3">
        <div class="card-body">
            <%= form_with model: @exam, url: update_exam_path(@exam), method: :put do |f| %>

            <div class="d-flex w-50">
                
                <div class="flex-grow-1 d-flex">
                    <div class="mx-2">
                        <label for="exam_name" class="col-form-label">Exam:</label>
                    </div>
                    <div class="flex-grow-1 mx-2">
                        <%= f.text_field :name, class: "form-control-plaintext px-2 border-bottom w-100"  %>
                    </div>
                    
                </div>
                <%= button_tag(type: 'submit', class: 'btn', tabindex: '3') do %>
                <i class="bi bi-pencil-square"></i>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <%= form_with model: @item, url: create_item_path, method: :post do |f| %>
            <%= render "partial/flash"%>
            <%= f.hidden_field :exam_id , :value => @exam.id %>
            <div class="form-floating mb-3">
                <%= f.text_area :question, class: "form-control"%>
                <%= f.label :question %>
            </div>
            <div class="row">
                <%= f.fields_for :choices do |choice| %>
                <div class="mb-3 col-6 ">
                    <div class="form-floating">
                        <%= choice.text_area :option, class: "form-control"%>
                        <%= choice.label :option %>
                    </div>
                    <div class="form-check">
                        <%= choice.check_box :correct, :value=>"deng", class: "form-check-input" %>
                        <%= choice.label :correct, class: "form-check-label" %>
                    </div>
                    
                </div>
                <% end %>
            </div>
            <div class="d-flex justify-content-end">
                <%= button_tag(type: 'submit', class: 'btn btn-primary', tabindex: '3') do %>
                <i class="bi bi-plus-lg"></i>
                Question
                <% end %>
            </div>
            <% end %>

            <div class="card mt-5">
                <div class="card-body">

                </div>
                
            </div>
            
        </div>
    </div>
</div>