<%= render "partial/navbar" %>
<div class="container mt-5">
    <p class="fs-3" ><%= Exam.find(params[:id]).name %> </p>
    
    <div class="card mt-5">
        <div class="card-body d-flex justify-content-center">
            <div class="w-75">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-7">
                                <p class="fw-bold">Name</p>
                            </div>
                            <div class="col-2 text-center">
                                <p class="fw-bold">Items</p>
                            </div>
                            <div class="col-2 text-center">
                                <p class="fw-bold">Score</p>
                            </div>
                            <div class="col-1 text-center">
                                <p class="fw-bold">Action</p>
                            </div>
                        </div>
                    </li>

                </ul>
                <ul class="list-group list-group-flush">
                    <% @exam_session.each do |es| %>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-7">
                                <p class=""><%= User.find(es.user_id).name %></p>
                            </div>
                            <div class="col-2 text-center">
                                <p class=""><%= Exam.find(es.exam_id).items.length %></p>
                            </div>
                            <div class="col-2 text-center">
                                <p class=""><%= es.score %></p>
                            </div>
                            <div class="col-1 text-center">
                                <%= link_to "View", show_exam_session_path(es), class: "text-decoration-none"%>
                            </div>
                        </div>
                    </li>
                    <% end %>
                    
                    
                </ul>
            </div>
            

        </div>

    </div>

</div>